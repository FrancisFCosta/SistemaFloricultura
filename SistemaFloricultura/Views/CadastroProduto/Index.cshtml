@using Util
@using SistemaFloricultura.Models
@model ProdutoModel
@{
    ViewBag.Title = "CadastroProduto";
}

<div class="jumbotron jumbotron-body">
    <h2>Cadastro de Produto</h2>
    <section id="cadastroProdutoForm">
        @using (Html.BeginForm("SalvarProduto", "CadastroProduto", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-6">
                <div class="col-md-12" id="image-holder" style="width:100%; height:100%">
                    <img id="miniaturaImagemProduto" src="~/fonts/insiraumaimagem.jpg" />
                </div>
                <div class="col-md-offset-4">
                    <label class="btn btn-default btn-file">
                        Escolha uma Imagem <input type="file" name="ImagemProduto" id="ImagemProduto" accept="image/*" style="display: none;">
                    </label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Nome, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Descricao, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @rows = 3 })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PrecoCusto, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.PrecoCusto, new { @class = "form-control", @onkeyup = "moeda(this);", @maxlength = "10" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PrecoVenda, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.PrecoVenda, new { @class = "form-control", @onkeyup = "moeda(this);", @maxlength = "10" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DataAquisicao, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DataAquisicao, new { @class = "form-control date", @id = "DataAquisicao" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label" for="lstCategorias">Categoria</label>
                    <div class="col-md-9">
                        <select id="lstCategorias" name="lstCategorias[]" multiple="multiple">
                            <option value="1">Casamentos</option>
                            <option value="2">Presentes</option>
                            <option value="3">Jardinagem</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-10 col-md-2">
                    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk" /> Salvar</button>
                </div>
            </div>
        }
    </section>
</div>

<script>
    $(document).ready(function () {

        $('#lstCategorias').multiselect({
            includeSelectAllOption: true,
            nSelectedText: 'Selecionado',
            nonSelectedText: 'Não Selecionado',
            selectAllText: 'Todas Selecionadas',
            allSelectedText: 'Todas Selecionadas'
        });

        $('.date').mask('99/99/9999');

        $('.date').on('change', function () {
            $(this).mask('99/99/9999');
        });

        $("#ImagemProduto").on('change', function () {

            if (typeof (FileReader) != "undefined") {

                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#miniaturaImagemProduto').attr('src', e.target.result);
                }
                reader.readAsDataURL($(this)[0].files[0]);
            } else {
                alert("Este navegador nao suporta FileReader.");
            }
        });

